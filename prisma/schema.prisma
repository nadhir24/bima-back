datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  phoneNumber  String    @unique @map("phone_number")
  email        String?   @unique
  password     String?
  createdAt    DateTime  @default(now()) @map("created_at")
  otp          OTP[]

  @@map("users")
}

model OTP {
  id         Int      @id @default(autoincrement())
  userId     Int
  code       String
  createdAt  DateTime @default(now()) @map("created_at")
  expiresAt  DateTime @map("expires_at")
  user       User     @relation(fields: [userId], references: [id])

  @@map("otp")
}

model Catalog {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  qty       Int
  isEnabled Boolean
  image     String
}



model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("blog")
}
